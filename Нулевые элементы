#include <stdio.h>

int main()
{
    int numberArray[10] = { 0, 0, -1, 0, 1, 2, 3, 1, 20, 3-3}; //3-3 - считается за нулевой элемент?
    int nullArrayElementCount = 0;

    for (int currentArrayPosition = 0; currentArrayPosition < 10; currentArrayPosition++)
    {
        if (numberArray[currentArrayPosition] == 0)
        {
            nullArrayElementCount++;
        }
    }
    printf("The array has %d null elements", nullArrayElementCount);
}
